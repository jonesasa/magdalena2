    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemNombre"
        android:text="@string/texto"
        android:textStyle="bold"
        android:textSize="24sp"
        />

</LinearLayout>